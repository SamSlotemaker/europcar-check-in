            <div class="next_buttons_container">
                <a class="checkin__next_button"
                    href="/cars/checkin/driverInfo?car=<%= car.id %>&driver=<%= driverNumber %>">Begrepen</a>
                <a href="/cars/checkin/deposit?car=<%= car.id %>">Overslaan</a>
